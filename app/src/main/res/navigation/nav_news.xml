<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_news.xml"
    app:startDestination="@id/breakingNewFragment">

    <fragment
        android:id="@+id/breakingNewFragment"
        android:name="com.example.practicesession.ui.BreakingNewFragment"
        android:label="fragment_breaking_new"
        tools:layout="@layout/fragment_breaking_new" >
        <action
            android:id="@+id/action_breakingNewFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.practicesession.ui.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.practicesession.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/pagination"
        android:name="com.example.practicesession.ui.PaginationFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_breaking_new" >
        <action
            android:id="@+id/action_pagination_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.practicesession.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />

</navigation>